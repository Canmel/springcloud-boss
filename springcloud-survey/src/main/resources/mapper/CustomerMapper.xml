<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.camel.survey.mapper.CustomerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.camel.survey.model.Customer">
        <id column="tel" property="tel" />
        <result column="username" property="username" />
        <result column="company" property="company" />
        <result column="position" property="position" />
        <result column="dept" property="dept" />
        <result column="city" property="city" />
        <result column="county" property="county" />
        <result column="street" property="street" />
        <result column="addr" property="addr" />
        <result column="industry" property="industry" />
        <result column="liabler" property="liabler" />
        <result column="liabler_tel" property="liablerTel" />
        <result column="created_at" property="createdAt" />
        <result column="open" property="open" />
        <result column="version" property="version" />
        <association property="creator" javaType="com.camel.core.model.SysUser">
            <id property="uid" column="creator" jdbcType="INTEGER"></id>
        </association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        username, company, position, dept, tel, city, county, street, addr, industry, liabler, liabler_tel, created_at, creator, open, version
    </sql>

    <select id="list" resultMap="BaseResultMap">
        select
         <include refid="Base_Column_List"></include>
        from
        customer
        <where>
            1=1
            <if test="createdAtStart != null and createdAtStart != ''">
                and DATE_FORMAT(created_at,'%Y-%m-%d') <![CDATA[ >=]]> #{createdAtStart}
            </if>
            <if test="createdAtEnd != null and createdAtEnd != ''">
                and DATE_FORMAT(created_at,'%Y-%m-%d') <![CDATA[ <=]]> #{createdAtEnd}
            </if>
        </where>
    </select>
</mapper>
