<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.camel.control.mapper.DDeviceMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.camel.control.model.DDevice">
        <id column="id" property="id" />
        <result column="device_number" property="deviceNumber" />
        <result column="device_ip" property="deviceIp" />
        <result column="created_at" property="createdAt" />
        <result column="update_at" property="updateAt" />
        <result column="device_name" property="deviceName" />
        <result column="threshold_value" property="thresholdValue" />
        <result column="admin_account" property="adminAccount" />
        <result column="admin_pwd" property="adminPwd" />
        <result column="tts_model" property="ttsModel" />
        <result column="pass_str" property="passStr" />
        <result column="failed_str" property="failedStr" />
        <result column="device_report_base_url" property="deviceReportBaseUrl" />
        <result column="device_report_sub_url" property="deviceReportSubUrl" />
        <result column="card_record_base_url" property="cardRecordBaseUrl" />
        <result column="card_record_sub_url" property="cardRecordSubUrl" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, device_number, device_ip, created_at, update_at, device_name, threshold_value, admin_account, admin_pwd, tts_model, pass_str, failed_str, device_report_base_url, device_report_sub_url, card_record_base_url, card_record_sub_url
    </sql>

    <select id="list" resultMap="BaseResultMap">
        select
         <include refid="Base_Column_List"></include>
        from
        d_device
    </select>
</mapper>
